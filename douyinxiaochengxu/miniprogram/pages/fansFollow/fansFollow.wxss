/* pages/fansFollow/fansFollow.wxss */
page{
  background-color:#fff;
  font-size:35rpx;
}
.title{
  background-color:#5C5C5C;
  display:flex;
  justify-content: center;
  padding:3% 0;
}
.title>view{
  width:30%;
  color:#ccc;
  text-align:center;
  font-weight:800;
}
.title .active{
  color:#FFF;
  padding-bottom:2%;
  border-bottom:5rpx solid #FFFF66;
}
.list{
  padding:0 4%;
}

/* 关注页面样式 */
.follow>view{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:5%;
}
.follow>view:first-child{
  margin-top:5%;
}
.follow>view>image{
  border:1px solid red;
  border-radius:50%;
  width:110rpx;
  height:110rpx;
}
.follow>view>view{
  display:flex;
  flex-direction:column;
}
.follow>view>view>text{
    overflow:hidden;
    word-break:keep-all;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.follow>view>view>text:first-child{
  font-size:35rpx;
}
.follow>view>view:last-child{
  align-items: center;
}
.follow>view>view>text:nth-child(2){
  font-size:30rpx;
  color:#868686;
  margin-top:4rpx;
}
.follow .yiguanzhu{
    width:122rpx;
    height:36rpx;
  text-align:center;
  border:2rpx solid ;font-size:25rpx;border-radius:10rpx;padding:1% 0;
  background-color:#ffffff;
  margin:auto;
  
}
.follow .weiguanzhu{
  display:inline-block;
    width:128rpx;
      height:44rpx;
      text-align:center;
      line-height: 44rpx;
      border:2rpx solid ;
      font-size:25rpx;
      border-radius:10rpx;
      background-color:#FF3333;
      color:#fff;
     
}

/* 粉丝页面样式 */
.fans>view{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:5%;
}
.fans>view:first-child{
  margin-top:5%;
}
.fans>view>image{
  border:2rpx solid red;
  border-radius:50%;
  width:110rpx;
  height:110rpx;
  vertical-align:middle;
}
.fans>view>view{
  display:flex;
  flex-direction:column;
}
.fans>view>view:last-child{
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  width:30%;
}
