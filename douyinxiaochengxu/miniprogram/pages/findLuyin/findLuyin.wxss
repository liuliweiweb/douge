/* pages/findLuyin/findLuyin.wxss */
/* 顶部SPA样式 */
page{
  font-size:30rpx;
}
.tapbar{
  width:100%;
  display:flex;
  justify-content: space-around;
  color:#fff;
  background-color:#5D5D5D;
  border-bottom:14rpx solid #959595;
}
.tapbar>view{
  text-align: center;
  display:felx;
  padding:4% 0;
  height:99%;
  margin-bottom:2rpx;
  
}
.tapbar .active{
  border-bottom:6rpx solid #E5FF00;
  color:#E5FF00;
}

/* 主题内容 */
 /* 全部 */
.qb{
  width:100%;
  background-image:linear-gradient(to bottom,#C2C2C2 ,#fff );
}
.title_img{
  width:100%;
  background-color:#E8DEDE;
  height:140rpx;
}
.qb>.search{
  background-color:#fff;
  border:1rpx solid #797979;
  width:93%;
  margin:auto;
  margin-top:2%;
  border-radius:20rpx;
  padding:5% 4%;
  box-sizing:border-box;
}
.qb>.search>view{
  border-bottom:2rpx solid #D7D7D7;
}
.qb .wz{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.wz image{
  width:30rpx;height:30rpx;
  vertical-align:middle;
}
.qb .wz>view:last-child{
  display:flex;
  width:30%;
  justify-content: space-between;
}
.qb .wz>view>view:last-child{
   display:flex;
   flex-direction: column;
   justify-content: space-around;
   align-items: center;
   font-size:30rpx;
}

.rq{
  display:flex;
  justify-content: space-around;
  

}
.rq>view{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width:33%;
  border:1px solid #d4d4d4;
  padding:3% 0;
}

.rq>view>text:first-child{
  font-size:30rpx;font-weight: bold;
}
.rq>view>text:last-child{
  font-size:.8rem30rpx;
  color:#949494;
}
.ss{
  color:#949494;
  font-size:30rpx;
  padding:3% 0;
  height:40rpx;
}
.ss>input{
  height:100%;
}
.price{
  height:40rpx;
  color:#949494;
  font-size:30rpx;
  padding:3% 0;
}
.price>input{
  height:100%;
}

/* 为你推荐 */
.tj{
  width:93%;
  margin:auto;
}
.tj>view{

}
.tj>view:first-child{
  font-weight: bold;font-size:30rpx;
  padding:4% 0;
}
.tj>view:last-child{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  
}
.tj>view>view{
  width:31%;
  font-size:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.tj>view>view>view{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
}
.tj>view>view>view>image{
  width:100%;height:100%;
 border-radius:30rpx;
}
.tj>view>view>text{
  padding:10% 0;
}
/* 榜单入口图 */
.bangdan{
  width:93%;
  margin: 0 auto ;
  text-align: center;
  padding:7% 0;
  background-color:#E4E4E4;
  margin-top:4%;
  border-radius:10rpx;
}

/* 我的关注  我的订单 */
.my{
  display:flex;
  justify-content: space-around;
  padding:4% 0;
}
.my>view{
  display:flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.my image{
  width:60rpx;
  height:60rpx;
}