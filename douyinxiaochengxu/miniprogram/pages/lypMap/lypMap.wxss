/* pages/lypMap/lypMap.wxss */
/* 搜索框样式 */
image{
   width:30rpx;height:30rpx;
}
.input{
  display:flex;
  justify-content: space-around;
  font-size:30rpx;
  align-items:center;
}
.input>view{
  background-color:#fff;
  display:flex;
  justify-content: space-around;
  width:90%;
  align-items: center;
  margin:3% 0;
}
.input>view>view{
  display:flex;
  align-items:center;
}
.input input{
  margin:0 3%;
}

/* nav导航条 */
.nav{
  display:flex;
  background-color:#fff;
  justify-content: space-around;
  font-size:35rpx;
  padding:3% 0;
}
.nav>view{
  width:30%;
  text-align: center;
}
.nav>view>text{
  display:inline-block;
  margin-right:1%;
}
.nav image{
  height:35rpx;width:35rpx;
  vertical-align: middle;
}
.map{
  position:fixed;
  width:100%;
  height:83%;
  bottom:0;
}
map{
  width:100%;height:100%;
}