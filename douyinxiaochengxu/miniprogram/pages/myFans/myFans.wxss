/* pages/fansFollow/fansFollow.wxss */
page{
  background-color:#fff;
  font-size:1rem;
}
.title{
  background-color:#5C5C5C;
  display:flex;
  justify-content: center;
  padding:4% 0;
}
.title>view{
  width:30%;
  color:#ccc;
  font-size:1rem;
  text-align:center;
}
.title .active{
  color:#FFF;
  padding-bottom:2%;
  border-bottom:.2rem solid #FFFF66;
}
.list{
  padding:0 4%;
}
/* 粉丝页面样式 */
.fans>view{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:5%;
}
.fans>view:first-child{
  margin-top:5%;
}
.fans>view>image{
  border:1px solid ;
  border-radius:50%;
  width:3rem;
  height:3rem;
  vertical-align:middle;
}
.fans>view>view{
  display:flex;
  flex-direction:column;
}
.fans>view>view:last-child{
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
/* .fans>view>view:last-child>image{
  width:2rem;
  height:2rem;
  vertical-align:center;
} */
.fans>view>view>text{
  overflow:hidden;
  word-break:keep-all;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.fans>view>view>text:nth-child(2){
  font-size:.8rem;
  color:#868686;
  margin-top:.2rem;
}
.fans>view>view:last-child>text:first-child{
   margin:0;
   width:4rem;
   text-align:center;
  border:1px solid ;font-size:.6rem;       border-radius:.3rem;padding:2% 0;
}
.yiguanzhu{
  background-color:red;
  color:#fff;
}


/* 遮罩层样式 */
.fixed{
  width:100%;height:100%;
  position: fixed;
  background-color:rgba(92,92,92,.4);
  display:flex;
  justify-content:center;
  align-items:center;
}
.fixed>view{
  width:80%;
  text-align:left;
  background-color:#fff;
  border-radius:1rem;
  padding:3% 0;
  padding-left:5%;

}
.fixed>view>view{
  width:80%;
  padding:5% 0;
}
