/* pages/myVipCar/myVipCar.wxss */
page{
  font-size:32rpx;
  background-color:#000;
}
.top{
  background-color:#5D5D5D;width:100%;
  height:350rpx;
  padding:0 5%;
  box-sizing:border-box;
}
.info{
  display:flex;
  align-items: center;
}
.info-left{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  border:1px solid ;
  margin-right:6%;
  background-color:#fff;

}
.info-right{
  display: flex;
  flex-direction: column;
  align-items: space-between;
}
.info-name{
  display:flex;
  align-items: center;
  position:relative;
}
.kg{
  width:60rpx;

}
.kg>image{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:6rpx solid #FFFF00;
  vertical-align: middle;
  position:absolute;
}
.names{
  color:#fff;
  font-size:38rpx;
  font-weight:500;
  padding-right:20rpx;
}
.day{
  font-size:32rpx;
  color:#C9C9C9;
}
.kg text{
  background-color:#FF9933;
  color:#fff;
  font-size:30rpx;
  font-weight:300;
  display:inline-block;
  width:100rpx;
  height:40rpx;
  border:6rpx solid #ffff00;
  border-radius:23rpx;
  text-align:right;
  padding-right:10rpx;
  
}
.invote{
  color:#C9C9C9;
  padding-top:20rpx;
}
.progress{
  display:flex;
  margin-bottom:15rpx;
}
.progress>progress{
  margin-right:20rpx;
}
.progress>view{
  position:relative;
  color:#C9C9C9;
}

.progress>view>image{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  position:absolute;
  margin-left:50rpx;
  margin-top:-46rpx;
  
}
.dengji{
  width:100%;
  display:flex;
  justify-content: space-between;
  align-items: center;
  color:#C9C9C9;
}
.main{
  background-color:#000;
  padding:0 5%;
}
/* 中间上边的框 */
.main-top{
  margin-bottom:20rpx;  
   width:100%;
  margin-top:-50rpx;
  background-color:#fff;
  box-sizing: border-box;
  border-radius:20rpx;
  overflow: hidden;
}
.tuiguang{
  padding:3% 3%;
  display:flex;
  justify-content: space-between;
  background-color:#C9C9C9;
  align-items: center;
}
.tuiguang>view:first-child{
  background-color:#676767;
  color:#fff;
  padding:1% 10%;
  border-radius:10rpx;
}
.tuiguang image{
  width:36rpx;
  height:36rpx;
  vertical-align: middle;
}

.shouyi{
  display:flex;
  justify-content:space-around;
  align-items: center;
  padding:1% 0;
}
.shouyi>view{
  display:flex;
  flex-direction:column;
  align-items: center;
}
.shouyi>view>view{
  padding:4% 0;
}
.shouyi>view>view:last-child>text{
  color:#FF0000;
  margin-right:2rpx;
  font-weight:800;
}
/* main下面的框 */
.main-bottom{
  width:100%;
  height:700rpx;  
  background-color:#fff;
}
.biaoyu{
  display:flex;
  justify-content: space-around;
  justify-items: center;
  padding:26rpx 0;
  background-color:#AEAEAE;
  color:#fff;
  font-weight: 900;
}
.chongzhi{
  display:flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-top:3%;
  padding-left:3%;
}
.chongzhi>image{
  width:20rpx;
  height:20rpx;
  vertical-align: center;
}
.youhui{
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding:5% 3%;
  font-size:30rpx;
  
}
.youhui>view{
    margin-bottom:30rpx;
    border:1px solid #E4E4E4;
    padding:15rpx 9rpx;
    height:145rpx;
    box-sizing: border-box;
    width:30%;

}
.youhui>view>view{
  text-align:center;
  
}

