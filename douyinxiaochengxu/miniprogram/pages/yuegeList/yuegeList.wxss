/* pages/yuegeList/yuegeList.wxss */
pages{
  font-size:35rpx;
}
input{
  height:100%;
}
image{
   width:30rpx;height:30rpx;
}
.input{
  display:flex;
  justify-content: space-around;
  font-size:30rpx;
  align-items:center;
}
.input>view{
  background-color:#fff;
  display:flex;
  justify-content: space-around;
  width:90%;
  align-items: center;
  margin:3% 0;
  padding:2% 0;
}
.input>view>view{
  display:flex;
  align-items:center;
}
.input input{
  margin:0 3%;
}

/* 下拉选样式 */

.selected image{
   width:25rpx;height:25rpx;
}

.selected{
  background-color:#fff;
  display:flex;
  justify-content: space-around;
  padding:1% 0;
  font-size:30rpx;
  border-bottom:2prx solid #E4E4E4;
}

/* 详情 */
.detailList{
  padding:3% 0;
  display:flex;
  justify-content: space-around;
  align-items: center;
  border-bottom:2rpx solid #E4E4E4;
  background-color:#fff;
}
.detailList>image{
  width:180rpx;height:180rpx;
  border-radius:20rpx;
}

.detailList>view{
  display:flex;
  flex-direction:column;
  width:60%;
 
}
.detailList>view>view{
  margin-bottom:1%;
}

.detailList>view>view:first-child{
  font-size:38rpx;
  font-weight:300;

}
.detailList>view>view:first-child image{
   width:45rpx;
   height:45rpx;
   vertical-align:middle;
   margin-left:10%;
   margin-right:1%;
}
.detailList>view>view:nth-child(2) text{
   font-size:35rpx;color:#A1A1A1;
}
.detailList>view>view:nth-child(4)>image{
  width:40rpx; height:40rpx;
  vertical-align: middle;
  margin-right:2%;
}
.detailList>view>view:nth-child(4)>text{
  color:#a1a1a1;font-size:35rpx;
  margin-right:20%;
}